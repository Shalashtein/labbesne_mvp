<p id="notice"><%= notice %></p>

<h1>Profile Colors</h1>

<table>
  <thead>
    <tr>
      <th>Profile</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profile_colors.each do |profile_color| %>
      <tr>
        <td><%= profile_color.profile_id %></td>
        <td><%= profile_color.color %></td>
        <td><%= link_to 'Show', profile_color %></td>
        <td><%= link_to 'Edit', edit_profile_color_path(profile_color) %></td>
        <td><%= link_to 'Destroy', profile_color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile Color', new_profile_color_path %>
