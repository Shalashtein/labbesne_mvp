files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/fix.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      (cd /var/app/current/ ; chmod -R 777 .)
      (cd /var/app/current/ ; runuser -l  ec2-user -c '$PWD')
      (cd /var/app/current/ ; runuser -l  ec2-user -c 'yes | ./bin/webpack')
      (cd /var/app/current/ ; runuser -l  ec2-user -c './bin/webpack')
      (cd /var/app/current/ ; runuser -l  ec2-user -c 'bundle exec rails restart')
      sudo chmod -R 777 .
      bundle install
      sudo chmod -R 777 yarn-error.log
      yarn install
      ./bin/webpack
